{
  "name": "weather",
  "version": "1.0.0",
  "description": "Simple MERN Weather App",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server/server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "14.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaundersEddie/weather.git"
  },
  "keywords": [],
  "author": "Eddie Saunders",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SaundersEddie/weather/issues"
  },
  "homepage": "https://github.com/SaundersEddie/weather#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.10.16",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
